<%- include("../partials/header.ejs") %>




<body class="text-gray-500 bg-gray-900 body-font">

    <section class="text-gray-500 bg-gray-900 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="text-center mb-20">
                <h1 class="sm:text-8xl text-3xl font-medium text-center title-font text-white mb-4">Welcome to SHCS</h1>
                <p class="text-base xl:w-2/4 lg:w-3/4 mx-auto text-3xl leading-tight">SHC is an integrated software aims
                    to maintain patient health records, real time scheduling of appointments and predicting disease
                    using symptoms. </p>
            </div>
  
            <% if(currentUser.role == 1){ %>
            <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 -mx-2">
                <div class="ml-auto p-2 sm:w-1/3 w-full">
                    <a href="/patient/getdocs">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                            </svg>
                            <span class="title-font font-medium text-white"> Find Other Doctors </span>
                        </div>
                </div>
                </a>
                <div class="mr-auto p-2 sm:w-1/3 w-full">
                    <a href="/patient">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                            </svg>
                            <span class="title-font font-medium text-white"> My Dashboard </span>
                        </div>
                </div>
                </a>
            </div>
            <%} else {%>
                <div class="mx-auto p-2 sm:w-1/3 w-full">
                    <a href="/index">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-red-400">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3" class="text-red-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                              </svg>
                            <span class="title-font font-medium text-white"> My Dashboard </span>
                        </div>
                </div>
                </a>
            </div>
            <%} %>
    </section>
  
    <div class="lg:w-3/4 md:w-2/3 mx-auto">
        <div class="flex -m-2"></div>
        <div class="p-2 w-full pt-0 mt-0 border-t border-gray-800 text-center">
        </div>
    </div>
    </div>

    <section class="text-gray-500 bg-gray-900 body-font">
        <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
          <img class="lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded" alt="hero" src="../images/newDocAvtar.jpg">
          <div class="text-center lg:w-2/3 w-full">
            <h1 class="title-font sm:text-6xl text-3xl mb-4 font-medium text-white"> Name : Dr. <%= doctor.name %> </h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed mb-8 text-4xl text-left">Medical License Number : MD11286382<br> Address : <%= doctor.address %> <br> Specialization : <%= doctor.degree %> <br>
                <span class="text-center text-4xl leading-tight text-gray-300"> Contact Details </span><br> Email : <%= doctor.email %> <br> Cellphone Number : <%= doctor.phone %> </p>
            <div class="flex justify-center">
                <% if(currentUser.role == 1){ %>
                    <a 
                    href="/patient/<%= currentUser._id %>/appointment/new/<%= doctor._id %>">
              <button class="inline-flex text-white bg-indigo-500 border-0 py-4 px-10 focus:outline-none hover:bg-indigo-600 rounded text-4xl">
                  Book An Appointment
              </button>
            </a>
              <%} %>
            </div>
          </div>
        </div>
      </section>

</body>

<%- include("../partials/footer.ejs") %>