<%- include("../partials/header.ejs") %>

<body class="text-gray-500 bg-gray-900 body-font">

    <section class="text-gray-500 bg-gray-900 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="text-center mb-20">
                <h1 class="sm:text-8xl text-3xl font-medium text-center title-font text-white mb-4">Welcome to SHCS</h1>
                <p class="text-base xl:w-2/4 lg:w-3/4 mx-auto text-3xl leading-tight">SHC is an integrated software aims
                    to maintain patient health records, real time scheduling of appointments and predicting disease
                    using symptoms. </p>
            </div>


            <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 -mx-2">
                <div class="p-2 sm:w-1/3 w-full">
                    <a href="/patient/<%= patient._id %>/edit">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                            </svg>
                            <span class="title-font font-medium text-white"> Edit My Profile </span>
                        </div>
                </div>
                </a>




                <div class="p-2 sm:w-1/3 w-full">
                    <a href="/patient">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                            </svg>
                            <span class="title-font font-medium text-white"> My Dashboard </span>
                        </div>
                    </a>
                </div>

                <div class="p-2 sm:w-1/3 w-full">
                    <a href="/patient/<%= patient._id %>/appointment/">
                        <div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
                            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                                <path d="M22 4L12 14.01l-3-3"></path>
                            </svg>
                            <span class="title-font font-medium text-white"> My Appointments </span>
                        </div>
                    </a>
                </div>
            </div>
    </section>

    <div class="lg:w-3/4 md:w-2/3 mx-auto">
        <div class="flex -m-2"></div>
        <div class="p-2 w-full pt-0 mt-0 border-t border-gray-800 text-center">
        </div>
    </div>
    </div>

    <section class="text-gray-500 bg-gray-900 body-font">
        <div class="container px-5 py-12 mx-auto">
            <div class="text-center mb-10">
                <h1 class="sm:text-7xl text-3xl font-medium text-center title-font text-white mb-4"> Medical Record
                </h1>
            </div>

            <% if(!patient.medical_record){ %>
            <div class="lg:w-2/3 flex flex-col sm:flex-row sm:items-center items-start mx-auto">
                <h1 class="flex-grow sm:pr-16 text-4xl font-medium title-font text-white"> No Medical Record Found </h1>
                <a href="/patient/<%= patient._id %>/MedicalRecords/new">
                    <button
                        class="flex-shrink-0 text-white bg-indigo-500 border-0 py-4 px-10 focus:outline-none hover:bg-indigo-600 rounded text-2xl mt-10 sm:mt-0">
                        Add Medical Rocord </button>
                </a>
            </div>
            <% } else { %>


            <section class="text-gray-500 body-font bg-gray-900">
                <div class="container px-5 py-5 mx-auto">
                    <div
                        class="flex items-center lg:w-4/5 mx-auto border-b pb-10 mb-10 border-gray-800 sm:flex-row flex-col">
                        <div class="flex flex-wrap -m-4">
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>

                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Name :
                                        <%= patient.medical_record.name %> </h2>
                                    <p class="leading-relaxed text-xl">This is your name. This can be viewed by the Doctor with whom you have booked Appointment. </p>
                                </div>
                            </div>
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">

                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />
                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Age :
                                        <%= patient.medical_record.age %></h2>
                                    <p class="leading-relaxed text-xl"> Age is just a number if you are fit. This can be viewed by the Doctor with whom you have booked Appointment. </p>
                                </div>
                            </div>
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke="currentColor">

                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Blood Group :
                                        <%= patient.medical_record.blood_group %> </h2>
                                    <p class="leading-relaxed text-xl"> Doctors 'discriminate' people only by blood group. This can also be viewed by the Doctor. </p>
                                </div>
                            </div>
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">

                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />

                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Gender :
                                        <%= patient.medical_record.gender %> </h2>
                                    <p class="leading-relaxed text-xl"> Society may consider both genders equal but the Doctor (viewing this) cannot.</p>
                                </div>
                            </div>
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">

                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M5 11l7-7 7 7M5 19l7-7 7 7" />

                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Height :
                                        <%= patient.medical_record.height %> cms</h2>
                                    <p class="leading-relaxed text-xl"> No-one considers people big or small based on Height. At least, not the Doctor viewing this. </p>
                                </div>
                            </div>
                            <div class="xl:w-1/3 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">

                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />

                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Weight :
                                        <%= patient.medical_record.weight %> kg </h2>
                                    <p class="leading-relaxed text-xl"> BMI is decided by weight also, so make sure you maintain it because it isn't hid from Doctor.</p>
                                </div>
                            </div>
                            <div class="xl:w-1/2 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">
                                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> Sugar :
                                        <%= patient.medical_record.sugar %> mg/dL </h2>
                                    <p class="leading-relaxed text-xl"> Normal Sugar Level is less than 140 mg/dL. You are prone to Diabetes if Sugar level is more
                                        than 140. It is important for Doctors to view your Sugar Level. </p>
                                </div>
                            </div>
                            <div class="xl:w-1/2 md:w-1/2 p-4">
                                <div class="border border-gray-800 p-6 rounded-lg">
                                    <div
                                        class="w-24 h-24 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-400 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="2" class="w-10 h-10"
                                            viewBox="0 0 24 24">

                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />

                                        </svg>
                                    </div>
                                    <h2 class="text-4xl text-white font-medium title-font mb-2"> BP :
                                        <%= patient.medical_record.bp %> </h2>
                                    <p class="leading-relaxed text-xl"> Ideal blood pressure is considered to be between 90/60 mm of Hg and 120/80 mm of Hg. Higher 
                                        or lower both are dangerous. Doctors can view your BP.
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                    
                    
                    <div class="flex ">
                        <a class = "ml-auto"
                        href="/patient/<%= patient._id %>/MedicalRecords/<%= patient.medical_record._id %>/edit">
                        
                        <button
                            class="inline-flex ml-auto text-white bg-indigo-500 border-0 py-4 px-8 focus:outline-none hover:bg-yellow-600 rounded text-4xl">
                            Update Record </button></a>
                    <form class="mr-auto"
                     id="delete-form" action="/patient/<%= patient._id %>/MedicalRecords/<%= patient.medical_record._id %>?_method=DELETE" method="POST"> 
                        <button
                            class="inline-flex ml-10  text-white bg-indigo-500 border-0 py-4 px-8 focus:outline-none hover:bg-red-600 rounded text-4xl">
                            Delete Record </button>
                            
                        </form>
                    </div>
                </div>
            </section>
            <% } %>
        </div>
    </section>

    <% include("../partials/footer.ejs") %>