<%- include("../partials/header.ejs") %>

<body class="text-gray-500 bg-gray-900 body-font">

	<section class="text-gray-500 bg-gray-900 body-font">
		<div class="container px-5 py-24 mx-auto">
			<div class="text-center mb-20">
				<h1 class="sm:text-8xl text-3xl font-medium text-center title-font text-white mb-4">Welcome to SHCS</h1>
				<p class="text-base xl:w-2/4 lg:w-3/4 mx-auto text-3xl leading-tight">SHC is an integrated software aims
					to maintain patient health records, real time scheduling of appointments and predicting disease
					using symptoms. </p>
			</div>


			<div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 -mx-2">
				<div class="p-2 sm:w-1/3 w-full">
					<a href="/patient/<%= patient._id %>/edit">
					<div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
						<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
							stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
							<path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
							<path d="M22 4L12 14.01l-3-3"></path>
						</svg>
						<span class="title-font font-medium text-white"> Edit My Profile </span>
					</div>
				</div>
				</a>
			


				
			<div class="p-2 sm:w-1/3 w-full">
				<a href="/patient/<%= patient._id %>">
				<div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
						stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
						<path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
						<path d="M22 4L12 14.01l-3-3"></path>
					</svg>
					<span class="title-font font-medium text-white"> My Medical History </span>
				</div>
			</a>
			</div>
		
			<div class="p-2 sm:w-1/3 w-full">
				<a href="/patient/<%= patient._id %>/appointment/">
				<div class="bg-gray-800 rounded flex p-4 h-full items-center hover:bg-indigo-600">
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
						stroke-width="3" class="text-indigo-500 w-6 h-6 flex-shrink-0 mr-4" viewBox="0 0 24 24">
						<path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
						<path d="M22 4L12 14.01l-3-3"></path>
					</svg>
					<span class="title-font font-medium text-white"> My Appointments </span>
				</div>
			</a>
			</div>
		</div>
	</section>

	<div class="lg:w-3/4 md:w-2/3 mx-auto">
		<div class="flex -m-2"></div>
		<div class="p-2 w-full pt-0 mt-0 border-t border-gray-800 text-center">
		</div>
	</div>
	</div>

	<section class="text-gray-500 bg-gray-900 body-font">
		<div class="container px-5 py-24 mx-auto">
			<div class="flex items-center lg:w-3/5 mx-auto border-b pb-10 mb-10 border-gray-800 sm:flex-row flex-col">
				<div
					class="sm:w-60 sm:h-60 h-20 w-20 sm:mr-10 inline-flex items-center justify-center rounded-full text-indigo-400 bg-gray-800 flex-shrink-0">
					<img class="sm:w-60 sm:h-60 w-40 h-40 rounded-full" src="../images/doc_avtar.jpg"
						alt="Card image cap">
				</div>
				<div class="flex-grow sm:text-left text-center mt-6 sm:mt-0">
					<h2 class="text-white text-5xl title-font font-medium mb-2"> Find Doctors </h2>
					<p class="leading-relaxed text-base text-3xl"> Select prefferred doctor and time slot to book an
						appointment. </p>
					<a class="mt-3 text-indigo-500 inline-flex items-center" href="/patient/getdocs">Find Doctors Now
						<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
							stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
							<path d="M5 12h14M12 5l7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
			<div class="flex items-center lg:w-3/5 mx-auto border-b pb-10 mb-10 border-gray-800 sm:flex-row flex-col">
				<div class="flex-grow sm:text-left text-center mt-6 sm:mt-0">
					<h2 class="text-white text-5xl title-font font-medium mb-2"> Book Appointment </h2>
					<p class="leading-relaxed text-base text-3xl"> Book appointments with wide range of Doctors having
						different Specializations in one easy step. </p>
					<a class="mt-3 text-indigo-500 inline-flex items-center"
						href="/patient/<%= patient._id %>/appointment/new"> Book Appointment Now
						<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
							stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
							<path d="M5 12h14M12 5l7 7-7 7"></path>

						</svg>
					</a>
				</div>
				<div
					class="sm:w-60 order-first sm:order-none sm:h-60 h-20 w-20 sm:ml-10 inline-flex items-center justify-center rounded-full text-indigo-400 bg-gray-800 flex-shrink-0">
					<img class="sm:w-60 sm:h-60 w-40 h-40 rounded-full" src="../images/bookAppointment.jpg"
						alt="Card image cap">
				</div>
			</div>
	</section>

</body>

<%- include('../partials/footer.ejs') %>