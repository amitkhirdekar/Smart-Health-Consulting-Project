<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new Admin !!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/" method="POST">
				<div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required=true>
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="email ID" required=true>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required=true>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/admin">Go Back</a>
        </div>
    </div>
</div>
