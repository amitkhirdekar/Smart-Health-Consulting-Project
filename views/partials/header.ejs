<!Doctype html>
<html>

<head>
	<title>SHCS</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="/stylesheets/patient_index.css">
	<link rel="stylesheet" href="/stylesheets/doc_show.css">
	<link rel="stylesheet" href="/stylesheets/appointment.css">
	<link rel="stylesheet" href="/build/tailwind.css">
</head>

<body>

	<header class="text-gray-700 body-font">
		<div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
			
			<a class="flex title-font font-medium items-center text-gray-400 mb-4 md:mb-0" href="/">
				<img src="/images/logo.png" fill="none" stroke="currentColor" stroke-linecap="round"
					stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 rounded-full"
					viewBox="0 0 24 24">
				<span class="ml-3 text-4xl"> SHCS </span>
			</a>
			
			<nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
			</nav>


			<% if(!currentUser) { %>
			<a href="/login">
				<button
					class="inline-flex items-center bg-yellow-600 border-0 py-1 px-3 focus:outline-none hover:bg-yellow-700 rounded text-white text-base text-3xl mt-4 md:mt-0">
					Login
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
						stroke-width="2" class="w-10 h-10 ml-1" viewBox="0 0 24 24">
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</button>
			</a>
			<a href="/register">
				<div class="px-3">
					<button
						class="inline-flex items-center bg-yellow-600 border-0 py-1 px-3 focus:outline-none hover:bg-yellow-700 rounded text-white text-base text-3xl mt-4 md:mt-0">
						Sign Up
						<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
							stroke-width="2" class="w-10 h-10 ml-1" viewBox="0 0 24 24">
							<path d="M5 12h14M12 5l7 7-7 7"></path>
						</svg>
					</button>
				</div>
			</a>
			<%} else { %>
				<h3 style="color: wheat;"><span class="glyphicon glyphicon-user px-5 text-3xl"><%= currentUser.name %></span>
				</h3>

				<% if(currentUser.role == 1){ %>
					<a href="/logout">
						<button
							class="inline-flex items-center bg-indigo-500 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 rounded text-white text-base text-3xl mt-4 md:mt-0">
							Log OUT
							<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2" class="w-10 h-10 ml-1" viewBox="0 0 24 24">
								<path d="M5 12h14M12 5l7 7-7 7"></path>
							</svg>
						</button>
					</a>
				<% } if(currentUser.role == 0){ %>
					<a href="/logout">
						<button
							class="inline-flex items-center bg-yellow-600 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 rounded text-white text-base text-3xl mt-4 md:mt-0">
							Log OUT
							<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
								stroke-width="2" class="w-10 h-10 ml-1" viewBox="0 0 24 24">
								<path d="M5 12h14M12 5l7 7-7 7"></path>
							</svg>
						</button>
					</a>
				<% } if(currentUser.role == 2){ %>

			<a href="/logout">
				<button
					class="inline-flex items-center bg-red-400 border-0 py-1 px-3 focus:outline-none hover:bg-red-600 rounded text-white text-base text-3xl mt-4 md:mt-0">
					Log OUT
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
						stroke-width="2" class="w-10 h-10 ml-1" viewBox="0 0 24 24">
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</button>
			</a>
			<%} %>
			<% } %>
		</div>
	</header>
	<div class="container">
		<% if (success && success.length > 0) { %>
		<div class="alert alert-success" role="alert">
			<%= success %>
		</div>
		<% } %>
		<% if (error && error.length > 0) { %>
		<div class="alert alert-danger" role="alert">
			<%= error %>
		</div>
		<% } %>
	</div>

	<body class="text-gray-500 bg-gray-900 body-font">